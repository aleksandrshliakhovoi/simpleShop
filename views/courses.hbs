
<h1>Courses</h1>

{{#if courses.length}}
{{#each courses}}
  <div class="row">
    <div class="col s6 offset3">
      <div class="card">
        <div class="card-image">
          <img src="{{img}}">
        </div>
        <div class="card-content">
            <span class="card-title">{{title}}</span>
            <p class="price">{{price}}</p>
        </div>
        <div class="card-action actions">
          <a href="/courses/{{uuid}}" target="_blank">Open course</a>
          <a href="/courses/{{uuid}}/edit?allow=true">Edit</a>
          <form action="/card/add" method="post">
            <input type="hidden" name="uuid", value="{{uuid}}">
            <button  type="submit" class="btn btn-primary">Buy</button>
          </form>
        </div>
      </div>
    </div>
  </div>

{{/each}}
{{else}}
<p>Courses doesnt exist</p>
{{/if}}